<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="oneKeyAi_win.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:oneKeyAi_win.Views"
    xmlns:vm="using:oneKeyAi_win.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <vm:MainPageViewModel x:Key="MainPageViewModel"/>
    </Page.Resources>

    <Grid  DataContext="{StaticResource MainPageViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TitleBar 
                Margin="2 4 0 0"
                x:Name="TitleBar"
                Title="WinUI Gallery"
                Subtitle="Preview"
                IsBackButtonVisible="True"
                IsBackButtonEnabled="{x:Bind NavigationViewFrame.CanGoBack, Mode=OneWay}"
                IsPaneToggleButtonVisible="True"
                BackRequested="TitleBar_BackRequested"
                PaneToggleRequested="TitleBar_PaneToggleRequested" >
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/Logo.ico" />
            </TitleBar.IconSource>
        </TitleBar>
        <NavigationView Grid.Row="1" 
                        x:Name="NavigationView" 
                        IsPaneToggleButtonVisible="False" 
                        IsBackButtonVisible="Collapsed"
                        IsBackEnabled="True">
            <NavigationView.Header>
                <SymbolIcon Symbol="Setting"/>
            </NavigationView.Header>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Setting"/>
                        <TextBlock Text="122111sss" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
         
            <NavigationView.PaneCustomContent>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <NavigationViewItem
                       x:Name="HomeItems"
                       Icon="Library"
                       Content="Test"
                       Tag="Home"
                       SelectsOnInvoked="True"/>
                </ScrollViewer>
            </NavigationView.PaneCustomContent>
            <NavigationView.MenuItems>
                <NavigationViewItem
                x:Name="HomeItem"
                Icon="Home"
                Content="Home"
                Tag="Home"
                SelectsOnInvoked="True"/>
                <NavigationViewItem
                x:Name="HistoryItem"
                Icon="Send"
                Content="History"
                Tag="History"
                SelectsOnInvoked="True"/>
                <NavigationViewItem
                x:Name="TestItem"
                Icon="Attach"
                Content="Test"
                Tag="Test"
                SelectsOnInvoked="True"/>
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                    <NavigationViewItem
                       Content="Â©2025 xyf"
                       Tag="Test"
                       FontSize="10"
                       SelectsOnInvoked="True"
                       IsEnabled="False"
                      />
            </NavigationView.PaneFooter>
            
            <NavigationView.Content>
                <Frame x:Name="NavigationViewFrame" Height="300"/>
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Page>
