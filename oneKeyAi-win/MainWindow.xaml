<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="oneKeyAi_win.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:oneKeyAi_win"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="oneKey">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TitleBar 
               Margin="2 4 0 0"
               x:Name="TitleBar"
               Title="oneKey"
               Subtitle="Preview"
               IsBackButtonVisible="{x:Bind NavigationViewFrame.CanGoBack, Mode=OneWay}"
               IsBackButtonEnabled="{x:Bind NavigationViewFrame.CanGoBack, Mode=OneWay}"
               IsPaneToggleButtonVisible="True"
               BackRequested="TitleBar_BackRequested"
               PaneToggleRequested="TitleBar_PaneToggleRequested" >
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/Logo.ico" />
            </TitleBar.IconSource>
        </TitleBar>
        <NavigationView 
                    Grid.Row="1"
                    x:Name="NavigationView" 
                    IsPaneToggleButtonVisible="False" 
                    IsBackButtonVisible="Collapsed"
                    IsBackEnabled="{x:Bind NavigationViewFrame.CanGoBack, Mode=OneWay}"
                    PaneTitle="oneKey">
  
            <NavigationView.MenuItems>
                <NavigationViewItem
                        x:Name="HomeItem"
                        Icon="Home"
                        Content="Home"
                        Tag="Home"
                        SelectsOnInvoked="True"/>
                <NavigationViewItem
                        x:Name="HistoryItem"
                        Icon="Send"
                        Content="History"
                        Tag="History"
                        SelectsOnInvoked="True"/>
                <NavigationViewItem
                        x:Name="TestItem"
                        Icon="Attach"
                        Content="Test"
                        Tag="Test"
                        SelectsOnInvoked="True"/>
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <NavigationViewItem
                        Content="Â©2025 xyf"
                        Tag="Test"
                        FontSize="10"
                        SelectsOnInvoked="True"
                        IsEnabled="False"
                        />
            </NavigationView.PaneFooter>

            <NavigationView.Content>
                <Frame x:Name="NavigationViewFrame" />
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Window>
